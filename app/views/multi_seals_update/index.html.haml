%header#header
  #inner
    %h1 シール状態一括更新

#contents.clearfix
  = render 'shared/side_menu'
  %main#main
    #messages_field
      = render 'shared/display_messages'
    #multi_seal_update{style: "color: #000"}
      = search_form_for(@query, url: multi_seals_update_path, method: :post) do |f|
        = field_set_tag '一括更新の対象の車種と月を変更' do
          = f.radio_button :vhiecle_type_eq, 1, id: 'vtype_1',
            class: 'custom_rd', checked: true
          = label_tag :vtype_1, '１号地',
            class: 'custom_rd_label blue_rd radius'
          = f.radio_button :vhiecle_type_eq, 2, id: 'vtype_2',
            class: 'custom_rd'
          = label_tag :vtype_2, 'バイク',
            class: 'custom_rd_label orange_rd radius'
          = f.radio_button :vhiecle_type_eq, 3, id: 'vtype_3',
            class: 'custom_rd'
          = label_tag :vtype_3, '２号地',
            class: 'custom_rd_label green_rd radius'
          = f.label :contracts_seals_month, '貼付け対象月'
          = f.month_field :contracts_seals_month_eq
          = f.hidden_field :valid_flag_eq, :value => true
          = f.hidden_field :contracts_seals_sealed_flag_eq, :value => false
          = f.submit("シール未貼付け番号を表示")
      %hr
      = form_for(@unsealed_list, url: {action: :update}, method: :post) do |f|
        = f.hidden_field :staff_nickname, :value => session[:nickname]
        = f.label :sealed_date, '貼付け作業日'
        = f.date_field :sealed_date
        %br
        %p シール貼付け済みの番号を選択してください
        #number_btns.btn-group{"data-toggle" => "buttons"}
          = f.collection_check_boxes(:numbers_sealsid_list, @unsealed_list.numbers_sealsid_list, :seal_id, :number) do |b|
            = b.label class: 'btn btn-primary number_btn' do
              = b.text
              = b.check_box
        %br
        = f.submit("シール貼付け処理")
%footer#footer
  #inner
