  <div class="field">
    <%= label_tag :nickname, 'スタッフ名' %>:<br />
    <%= text_field_tag :nickname, '', size: 10 %>
  </div>
  <div class="field">
    <%= label_tag :password, 'パスワード' %>:<br />
    <%= password_field_tag :password, '', size: 10 %>
  </div>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'login' %>
<% end %>
