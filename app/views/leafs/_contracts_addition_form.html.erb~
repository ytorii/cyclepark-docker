<%# form_for([@leaf, @contract]) do |c| %>
  <%= form_for(@contract, :url => {:action => 'addContract'}) do |c| %>
  <% if @contract.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@contract.errors.count, "error") %> prohibited this leaf from being saved:</h2>

  <ul>
    <% @contract.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
</div>
  <% end %>

<div class="field">
  <%= c.label :term1 %><br>
  <%= c.select :term1, {'1ヶ月' => 1, '3ヶ月' => 3, '6ヶ月' => 6}, { include_blank: true } %>
</div>
<div class="field">
  <%= c.label :money1 %><br>
  <%= c.number_field :money1 %>
</div>
<div class="field">
  <%= c.label :term2 %><br>
  <%= c.select :term2, {'1ヶ月' => 1, '3ヶ月' => 3, '6ヶ月' => 6}, { include_blank: true } %>
</div>
<div class="field">
  <%= c.label :money2 %><br>
  <%= c.number_field :money2 %>
</div>
<div class="field">
  <%= c.label :contract_date %><br>
  <%= c.date_select :contract_date %>
</div>
<%= c.fields_for :seals do |s| %>
<div class="field">
  <%= s.label :sealed_flag %><br>
  <%= s.check_box :sealed_flag %>
</div>
<% end %>
<div class="field">
  <%= c.label :skip_flag %><br>
  <%= c.check_box :skip_flag %>
</div>
  <%= c.hidden_field :leaf_id, :value => @contract.leaf_id %>
  <%= c.hidden_field :staff_nickname, :value => session[:nickname] %>
<div class="actions">
  <%= c.submit %>
</div>
<% end %>
