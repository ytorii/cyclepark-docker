= form_for(@seal) do |f|
  - if @seal.errors.any?
    #error_explanation
      %h2
        = pluralize(@seal.errors.count, "error")
        prohibited this seal from being saved:
      %ul
        - @seal.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :contract_id
    %br/
    = f.text_field :contract_id
  .field
    = f.label :month
    %br/
    = f.date_select :month
  .field
    = f.label :sealed_flag
    %br/
    = f.check_box :sealed_flag
  .field
    = f.label :sealed_date
    %br/
    = f.date_select :sealed_date
  .field
    = f.label :staff_nickname
    %br/
    = f.text_field :staff_nickname
  .actions
    = f.submit
